= form_for(@author) do |f|
  - if @author.errors.any?
    #error_explanation
      %h2
        = pluralize(@author.errors.count, "error")
        prohibited this author from being saved:
      %ul
        - @author.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "Author name"
    %br/
    = f.text_field :authorname
  .field
    = f.label "Profile pic"
    %br/
    = f.file_field :image_url
  .actions
    = f.submit
