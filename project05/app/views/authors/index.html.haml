%h1 Listing authors
.author_table
  %table
    %tr
      %th Author name
    - @authors.each do |author|
      %tr
        %td= author.authorname
        %td= link_to 'Show', author
        %td= link_to 'Edit', edit_author_path(author)
        %td= link_to 'Destroy', author, confirm: 'Are you sure?', method: :delete
%br/
= link_to 'New Author', new_author_path
