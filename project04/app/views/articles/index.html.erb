<% content_for :subtitle do %>
	<h3>...with a name .com hipsters love!</h3>
<% end %>

<div>
	<h2>All the World's Articles</h2>
	<%= link_to image_tag('add.png') + ' create an article', new_article_path, :title => 'creates a new article' %>
</div>

<div>
	<table>
		<tr>
		  <th class = 'ttl'>Title</th>
		  <th class = 'auth'>Author</th>
		  <th class = 'body'>Body</th>
		  <th class = 'dat'>Create date</th>
		  <th class = 'butt'></th>
		</tr>
	</table>
</div>
<div class = 'article list'>
	<table>
		<% @articles.each do |article| %>
			<tr>
				<td><%= truncate(article.title, :length => 16) %></td>
				<td><%= truncate(article.author, :length => 16) %></td>
				<td><%= truncate(article.body, :length => 40) %></td>
				<td><%= article.create_date.strftime('%b. %d, %Y') %></td>
				<td><%= link_to image_tag('find.png'), article, :title => 'View me' %></td>
				<td><%= link_to image_tag('comment_edit.png'), edit_article_path(article), :title => 'Edit me' %></td>
				<td><%= link_to image_tag('cancel.png'), article, :title => 'Delete me', confirm: 'Are you sure you wanna remove this article?', method: :delete %></td>
			</tr>
		<% end %>
	</table>
</div>
<br />

<%= @articles.count %> articles.
