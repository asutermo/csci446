= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label "Pass"
    = f.password_field(:password)
  .field
    = f.label "Confirm Pass"
    = f.password_field(:password_confirmation)
  .field
    = f.label "First Name"
    = f.text_field :f_name
  .field
    = f.label "Last Name"
    = f.text_field :l_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label "Profile Picture"
    = f.file_field :photo
  .actions
    = recaptcha_tags
  .actions
    = f.submit
