!!!
%html
  %head
    %title Gamez
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  .topbar
    - if current_user.nil?
      = link_to "Login", :login
      = link_to "Register", :register
    - elsif current_user.is_admin?
      = render :partial => 'layouts/auserbar'
    - else current_user.is_member?
      = render :partial => 'layouts/muserbar'
  %h1
    = link_to "Gamez", root_url
  
  - if !current_user.nil? and current_user.is_admin?
    = render :partial => 'layouts/auserbar'
  %body
    = yield